<?xml version="1.0" encoding="utf-8"?>
<com.fullsink.mp.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serverDataLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image1" android:src="@drawable/ic_menu_invite"
        android:layout_height="wrap_content" android:layout_width="60dip"
        android:adjustViewBounds = "true" android:maxHeight="80dip"
        android:layout_margin="5dip" 
        />
   
<CheckedTextView
    android:id="@+id/text1"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:checkMark="?android:attr/listChoiceIndicatorSingle"
/>

</com.fullsink.mp.CheckableLinearLayout>
